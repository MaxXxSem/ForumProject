@section Scripts{
    @Scripts.Render("~/Scripts/jquery-1.10.2.js")
    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.js")
    @Scripts.Render("~/Scripts/signInUp.js")
    
    <script>
        function OnComplete(res, status) {
            if (res.responseText == "true") {
                document.location.href = "/Home/Index";
            } else {
                document.getElementById('message_wrong').innerHTML = "";
                document.getElementById('message_wrong').innerHTML = "Wrong login or password <br/>";
            }
        }
    </script>
}

@section Styles{
    <link href="@Url.Content("~/Content/SigninupPage.css")" rel="stylesheet" type="text/css" />
}

<main>
    <div id="form_content">
        <h3>Sign in</h3>
        <div id="message_wrong" style="color: red"></div>            <!-- Wrong login or password message -->
        @using (Ajax.BeginForm("SignIn", null, new AjaxOptions { HttpMethod = "Post", OnComplete = "OnComplete" }, new { @name="_form"}))
        {
            <span>Login</span>
            <input type="text" class="input_text" name="login" />
            <span>Password</span>
            <input type="password" class="input_text" name="password" />
            <input type="submit" value="Log in" />
        }

        <a href="/Auth/SignUp">Sign up</a>
    </div>

    <script>
        checkData();
    </script>
</main>